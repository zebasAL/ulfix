{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "plugin:cypress/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "cypress",
        "jest"
    ],
    "rules": {
        "react/function-component-definition": ["off", {
            "namedComponents": "arrow-function",
            "unnamedComponents": "arrow-function"
          }],
          "react/jsx-props-no-spreading": "off"
    }
}
